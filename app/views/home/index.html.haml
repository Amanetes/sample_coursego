.p-5.mb-4.bg-light.border.rounded-3.shadow-sm.text-black
  .display-4
    What do you want to learn today?

  .p-4

  - if current_user
    .p-3
    = search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f|
      .input-group
        = f.search_field :title_cont, class: 'form-control-lg', style: 'float: left; width: 200px; ', placeholder: 'Find a course', :autocomplete => :off
        %span.input-group-append
          %button.btn.btn-primary.btn-lg{:type => "submit"}
            %span.fa.fa-search{"aria-hidden" => "true"}

.card-group.shadow-sm
  .card.card-body
    %h1
      .fa.fa-graduation-cap
    = Course.count
    online courses
    .row
    Explore a variety of fresh topics
  .card.card-body
    %h1
      .fa.fa-chalkboard-teacher
      /.fa.fa-brain
    = Course.distinct.count(:user_id)
    expert instructors
    .row
    Find the right instructor for you
  .card.card-body
    %h1
      .fa.fa-user-graduate
    = User.count
    active learners
    .row
    Join the knowledge sharing community
  .card.card-body
    %h1
      .fa.fa-infinity
    Lifetime access
    .row
    Learn on your schedule

%p
- if current_user
  %h2
    .fa.fa-user-graduate
    Continue Learning
  .row
    - @purchased_courses.each do |course|
      .card-lg-6.col-md-4.col-12.mt-3
        = render 'courses/course', course: course
      .text-end
        = link_to 'All my purchased courses', purchased_courses_path
  %hr
%h2
  .fa.fa-chart-line
  Popular courses
.row
  - @popular.each do |course|
    .card-lg-6.col-md-4.col-12.mt-3
      = render 'courses/course', course: course
    .text-end
      = link_to 'More popular courses', courses_path(courses_search: {s: 'enrollments_count desc'})
-# courses_search - for ransack, s for sort by

%hr
%h2
  .fa.fa-star
  Top rated courses
.row
  - @top_rated.each do |course|
    .card-lg-6.col-md-4.col-12.mt-3
      = render 'courses/course', course: course
    .text-end
      = link_to 'Best rated courses', courses_path(courses_search: {s: 'average_rating desc'})

%hr
%h2
  .fa.fa-clock
  Latest courses
.row
  - @latest.each do |course|
    .card-lg-6.col-md-4.col-12.mt-3
      = render 'courses/course', course: course
    .text-end
      = link_to 'More new courses', courses_path(courses_search: {s: 'created_at desc'})

%hr
%h2
  .fa.fa-comment
  What our students have to say
.row
  - @latest_good_reviews.each do |enrollment|
    .card-lg-6.col-md-4.col-12.mt-3
      = render 'enrollments/enrollment', enrollment: enrollment