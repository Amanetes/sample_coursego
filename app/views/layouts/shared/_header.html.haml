%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  %a.navbar-brand{:href => "/"}
    /= image_tag 'logo.png', size: '20x20', alt: "logo", class: 'rounded'
    .fa.fa-graduation-cap
    CourseGo Sample
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse.justify-content-md-around
    - if current_user
      %ul.navbar-nav.mr-auto
        %li.nav-item
          = link_to root_path, class: class_names('nav-link', { active: current_page?(root_path) }) do
            .fa.fa-home
            Home
        %li.nav-item
          = link_to courses_path, class: class_names('nav-link', { active: current_page?(courses_path) }) do
            .fa.fa-graduation-cap
            Courses
        %li.nav-item
          = link_to new_course_path, class: class_names('nav-link', { active: current_page?(new_course_path) }) do
            .fa.fa-plus
            New Course
        %li.nav-item
          = link_to users_path, class: class_names('nav-link', { active: current_page?(users_path) }) do
            .fa.fa-users
            Users
        %li.nav-item
          = link_to enrollments_path, class: class_names('nav-link', { active: current_page?(enrollments_path) }) do
            .fa.fa-lock-open
            Enrollments
      = search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f|
        .input-group
          = f.search_field :title_cont, class: 'form-control-sm', style: 'float: left; width: 150px; ', placeholder: 'Find a course', :autocomplete => :off
          %span.input-group-append
            %button.btn.btn-primary.btn-sm{:type => "submit"}
              %span.fa.fa-search{"aria-hidden" => "true"}
      %ul.navbar-nav
        %li.nav-item
          = link_to home_activity_path, class: class_names('nav-link', { active: current_page?(home_activity_path) }) do
            .fa.fa-bell
            Activity
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"}
            %b= current_user.email
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdown"}
            = link_to user_path(current_user), class: "dropdown-item" do
              .fa.fa-user
              %b My profile
            = link_to edit_user_registration_path, class: "dropdown-item" do
              .fa.fa-cog
              %b Account settings
            = link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do
              .fa.fa-sign-out-alt
              %b Sign out
    - else
      %ul.navbar-nav
      %ul.navbar-nav
        %li.nav-item
          = link_to 'Sign Up', new_user_registration_path,
          class: class_names('nav-link', { active: current_page?(new_user_registration_path) })
        %li.nav-item
          = link_to 'Log In', new_user_session_path,
          class: class_names('nav-link', { active: current_page?(new_user_session_path) })